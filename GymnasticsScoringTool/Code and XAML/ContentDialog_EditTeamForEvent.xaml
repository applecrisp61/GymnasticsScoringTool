<ContentDialog
    x:Class="GymnasticsScoringTool_01.ContentDialog_EditTeamForEvent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GymnasticsScoringTool_01"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Template="{StaticResource ControlTemplate_ContentDialog}"
    Title="Input or Edit Scores for Event">

    <StackPanel x:Name="StackPanel_ScoreEdits">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Team: " 
                       VerticalAlignment="Top" FontSize="18"></TextBlock>
            <TextBlock x:Name="TextBlock_TeamName"  Text="Gobbledy gook which should be replaced by constructor" 
                     Margin="5,0,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"></TextBlock>
            <TextBlock Text="Event: " 
                       Margin="20,0,0,0" VerticalAlignment="Top" FontSize="18"></TextBlock>
            <TextBlock x:Name="TextBlock_EventName"  Text="Gobbledy gook which should be replaced by constructor" 
                     Margin="5,0,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"></TextBlock>
        </StackPanel>
        <local:UserControl_EditGymnastForEvent x:Name="EditGymnastsForEvent_UserControl"></local:UserControl_EditGymnastForEvent>
    </StackPanel>
</ContentDialog>
